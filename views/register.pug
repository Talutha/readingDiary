extends ./layout/layout.pug

block title
  title Registration

block content

  if typeof(errorMessage) !== 'undefined'
    span #{errorMessage}

  h1 Registration

  form(method='post', name='registration')
    div.form-group
      label(for='first-name') First Name
      input#first-name.form-control(type='text' name='firstName' placeholder='First Name')
    div.form-group
      label(for='last-name') Last Name
      input#last-name.form-control(type='text' name='lastName' placeholder='Last Name')
    div.form-group
      label(for='email') Email Address
      input#email.form-control(type='email' name='emailAddress' placeholder='Email')
    div.form-group
      label(for='username') Username
      input#username.form-control(type='text' name='username' placeholder='Username')
    div.form-group
      label(for='password') Password
      input#password.form-control(type='password' name='password' placeholder='Password')
    div.form-group
      label(for='birthday') Birthday
      input#birthday.form-control(type='text' name='birthday' placeholder='MM/DD/YYYY')
    button.btn.btn-default(type='submit') Submit
